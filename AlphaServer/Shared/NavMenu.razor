<CascadingAuthenticationState>
<nav class="navbar navbar-expand-sm bg-info-subtle">
    <div class="container-fluid">
        <a class="navbar-brand" href="/">AlphaMarket</a>
        <button class="navbar-toggler" type="button" @onclick="ToggleNavMenu" data-bs-toggle="collapse" data-bs-target="#mainNavbar" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
        <div class="collapse.navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="Home/Index">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="Product/Index">Товары</a>
                </li>
                        @if (User.IsInRole(AlphaServer.WC.AdminRole))
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="Identity/Account/Register">New Admin</a>
                            </li>
                        }
                       
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="true">
                        Admin Panel
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                            <li><a class="dropdown-item" href="Category/Index">Category</a></li>
                            <li><a class="dropdown-item" href="ApplicationType/Index">ApplicationType</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="Product/Index">Product</a></li>
                        </ul>
                    </li>
                <li>
                    @if (HttpContextAccessor.HttpContext.Session.Get<List<ShoppingCart>>(WC.SessionCart) != null)
                    {
                        <a asp-action="Index" asp-controller="Cart" class="nav-link">
                            @{
                                var count = HttpContextAccessor.HttpContext.Session.Get<List<ShoppingCart>>(WC.SessionCart).Count;
                            }
                            <i class="bi bi-cart4"></i> &nbsp; (@count)
                        </a>
                    }
                    else
                    {
                        <a href="#" class="nav-link">
                            <i class="bi bi-cart4"></i> &nbsp; (0)
                        </a>
                    }
                </li>                
                <li class="nav-item">
                    <a class="nav-link disabled">Disabled</a>
                </li>
                <li class="nav-item">
                    <AlphaServer.Shared.LoginDisplay />
                </li>
                
            </ul>            
        </div>
        </div>
    </div>
</nav>
</CascadingAuthenticationState>

@code {
    private bool collapseNavMenu = false;
    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}

