@model IEnumerable<AlphaMarket_Models.Category>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Microsoft.AspNetCore.Components.Web

@{
    Layout = "_ViewImports";
}

<div class="container p-3">   
    <div class="row pt-4">    
        <div class = "col-6"> 
            <h2 class="text-primary">Список категорий</h2>     
        </div>
        <div class="col-6 text-end"> 
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-lg"></i> Создать
            </a>
        </div>        
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-striped align-middle table-bordered" style="width:100%">

            <thead class="table-secondary">
                <tr>
                    <th scope="col">Имя категории</th>
                    <th scope="col">Номер категории</th>
                    <th></th>
                </tr>
            </thead>
            @foreach(var obj in Model)
            {
                <tr>
                    <td width="50%">@obj.Name</td>
                    <td width="30%">@obj.DisplayOrder</td>
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            @*Кнопки добавить удалить*@
                            <a asp-controller="Category" asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-primary">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a asp-controller="Category" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger">
                                <i class="bi bi-trash3-fill"></i>
                            </a>
                        </div>
                    </td>
                </tr>               
            }
        </table>
    }
    else
    {
        <p>Категорий ещё не создано.</p>
    }      

</div>