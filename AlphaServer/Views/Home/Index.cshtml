@model AlphaServer.Models.ViewModels.HomeVM
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Blazorise;
@using Microsoft.AspNetCore.Components.Web
@using AlphaServer.Models.ViewModels
@using Microsoft.AspNetCore.Components
@BodyContent
@{
    Layout = "_ViewImports";
}

<body>

<div class="container">
    <div class="text-center">
            <button class="btn btn-dark filter-button" data-filter="all">All</button>
            @foreach (var obj in @Model.Categories)
        {
                <button class="btn btn-outline-secondary filter-button" data-filter="@obj.Name.Replace(' ','_')">
               @obj.Name
            </button>
        }        
    </div>
    <br />
    <div class = "row">
        @foreach (var prod in Model.Products)
            {
                //All Product
                <partial name="_IndividualProductCard" model = "prod" />
            }
    </div>
</div>
</body>

@section Scripts {
    <script>
        $(document).ready(function () {

            $(".filter-button").click(function () {

                var value = $(this).attr('data-filter');
                if (value == "all") {
                    $('.filter').show('1000');
                }
                else {
                    $(".filter").not('.' + value).hide('3000');
                    $('.filter').filter('.' + value).show('3000');

                }
            });

        });
    </script>
}
