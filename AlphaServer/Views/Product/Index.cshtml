@model IEnumerable<AlphaMarket_Models.Product>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Microsoft.AspNetCore.Components.Web
@BodyContent
@{
    Layout = "_ViewImports";
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Список товаров</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-lg"></i> &nbsp; Создать новый товар
            </a>
        </div>
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-striped align-middle table-bordered" style="width:100%">

            <thead>
                <tr>
                    <th>
                        Название товара
                    </th>
                    <th>
                        Цена
                    </th>
                    <th>
                        Категория товара
                    </th>
                    <th>
                        Тип товара
                    </th>
                    <th></th>
                </tr>
            </thead>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="30%">@obj.Name</td>
                    <td width="10%">@obj.Price</td>
                    <td width="20%">@obj.Category.Name</td>
                    <td width="20%">@obj.ApplicationType.Name</td>
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            @*Кнопки добавить удалить*@
                            <a asp-route-Id="@obj.Id" asp-action="Upsert" class="btn btn-primary">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a asp-controller="Product" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger">
                                <i class="bi bi-trash3-fill"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </table>
    }
    else
    {
        <p>Тоавры не созданы.</p>
    }


</div>