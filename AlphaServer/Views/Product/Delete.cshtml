@model AlphaServer.Models.Product
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Microsoft.AspNetCore.Components.Web
@using AlphaServer
@{
    Layout = "_ViewImports";
}

<form method="post">    
         <input asp-for="Id" hidden />
    
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">Delete Product</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" disable class="form-control" />                        
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Price"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Price" disable class="form-control" />
                    </div>
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="Description"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="Description" class="form-control" />
                        </div>
                    </div>
                    
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="Category"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="CategoryId" disable class="form-control" />
                            
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">                            
                            <button type="submit" class="btn btn-danger w-100">Delete</button>                            
                        </div>
                        <div class="col">
                            <a href="/Product" class="btn btn-success w-100"><i class="fas fa-sign-out-alt"></i> Back</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @if (Model.Id != 0)
                {
                    <img src="@WC.ImagePath@Model.Image" width="100" style="border-radius:5px; border:1px solid #bbb" />
                }
                @* Keep this empty *@
            </div>
        </div>
    </div>

</form>