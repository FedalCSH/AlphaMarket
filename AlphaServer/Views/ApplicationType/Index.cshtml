@model IEnumerable<AlphaMarket_Models.ApplicationType>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Microsoft.AspNetCore.Components.Web
@{
    Layout = "_ViewImports";
}
<div class="container p-3">
    
    <div class="row pt-4">
    
        <div class = "col-6"> 
            <h2 class="text-primary">Тип товаров</h2>     
        </div>
        <div class="col-6 text-end"> 
            <a asp-controller="ApplicationType" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-lg"></i>&nbsp; Создать новый тип товаров
            </a>
        </div>        
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-striped align-middle table-bordered" style="width:100%">
            
            <thead class="table-success">
                <tr>
                    <th>Название</th>    
                    
                    <th></th>
                </tr>
            </thead>
                <tbody>
            @foreach(var obj in Model)
            {
                <tr>
                        <td width="50%">@obj.Name</td>
                                <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                @*Кнопки добавить удалить*@
                                <a asp-controller="ApplicationType" asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-primary">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                <a asp-controller="ApplicationType" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger">
                                    <i class="bi bi-trash3-fill"></i>
                                    </a>
                            </div>
                            </td>
                </tr>
            }
                </tbody>
        </table>
    }
    else
    {
        <p>Не создано типов товаров.</p>
    }

</div>
